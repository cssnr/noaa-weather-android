<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NOAAWeather" parent="Theme.Material3.DayNight">
        <item name="materialButtonStyle">@style/CustomMaterialButton</item>

        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryInverse">@color/blue_light</item>
    </style>

    <style name="CustomMaterialButton" parent="Widget.Material3.Button">
        <!--<item name="backgroundTint">@color/blue_light</item>-->
        <item name="android:textColor">?attr/colorPrimaryFixed</item>
        <!--<item name="android:drawableTint">?attr/colorPrimaryFixed</item>-->
        <!--<item name="iconTint">?attr/colorPrimaryFixed</item>-->
    </style>

    <style name="Theme.NOAAWeather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NOAAWeather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NOAAWeather.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/AlertDialogCorner</item>
    </style>
    <style name="AlertDialogCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="WidgetStyle" parent="Theme.MaterialComponents.DayNight" />
    <style name="Theme.WidgetConfig.Transparent" parent="Theme.NOAAWeather">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

<!--        <item name="android:windowTranslucentNavigation">true</item>-->
<!--        <item name="android:navigationBarColor">@android:color/transparent</item>-->
    </style>

    <style name="CustomOutlinedStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/blue_light</item>
        <item name="android:textColor">?attr/colorPrimaryFixed</item>
        <item name="iconTint">?attr/colorPrimaryFixed</item>
    </style>

</resources>
